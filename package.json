{
	"name": "fastify-boilerplate",
	"version": "1.0.0",
	"description": "Boilerplate de API usando Fastify.",
	"main": "index.js",
	"scripts": {
		"dev": "tsx watch src/app/http/server.ts",
		"build": "tsc -p tsconfig.json",
		"start": "node dist/app/http/server.js",
		"openapi:generate": "tsx scripts/generate-openapi-spec.ts",
		"openapi:changes": "tsx scripts/detect-route-changes.ts",
		"test": "vitest",
		"test:ui": "vitest --ui",
		"test:changed": "vitest related --changed --run",
		"test:coverage": "vitest run --coverage",
		"lint": "biome lint .",
		"format": "biome format . --write",
		"check": "biome check .",
		"check:fix": "biome check . --write",
		"build:check": "tsc --noEmit",
		"qa": "npm run check:fix && npm run test:changed && npm run build:check",
		"prepare": "husky"
	},
	"keywords": [
		"fastify",
		"api",
		"boilerplate"
	],
	"author": "Antonio Silva <contato@antonbiobsilva.com.br>",
	"license": "ISC",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/Tonybsilva-dev/fastify-boilerplate.git"
	},
	"homepage": "https://github.com/Tonybsilva-dev/fastify-boilerplate#readme",
	"bugs": {
		"url": "https://github.com/Tonybsilva-dev/fastify-boilerplate/issues"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.3.10",
		"@commitlint/cli": "^20.2.0",
		"@commitlint/config-conventional": "^20.2.0",
		"@types/bcryptjs": "^2.4.6",
		"@types/jsonwebtoken": "^9.0.10",
		"@types/node": "^25.0.3",
		"@vitest/coverage-v8": "^3.2.4",
		"@vitest/ui": "^3.2.4",
		"cross-env": "^10.1.0",
		"husky": "^9.1.7",
		"lint-staged": "^16.2.7",
		"npm-check-updates": "^19.2.0",
		"pino-pretty": "^13.1.3",
		"ts-node": "^10.9.2",
		"tsx": "^4.21.0",
		"typescript": "^5.9.3",
		"vitest": "^3.2.4"
	},
	"dependencies": {
		"@casl/ability": "^6.7.5",
		"@fastify/cors": "^11.2.0",
		"@fastify/helmet": "^13.0.2",
		"@fastify/rate-limit": "^10.3.0",
		"@fastify/swagger": "^9.6.1",
		"@fastify/swagger-ui": "^5.2.3",
		"bcryptjs": "^3.0.3",
		"fastify": "^5.6.2",
		"jsonwebtoken": "^9.0.3",
		"zod": "^4.2.1",
		"zod-to-json-schema": "^3.25.0"
	}
}
